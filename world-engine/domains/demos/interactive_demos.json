{
    "interactive_demos": {
        "math_pro_showcase": {
            "name": "Math Pro Glyph System Demo",
            "description": "Interactive demonstration of glyph collation and morpheme transformations",
            "ui_features": {
                "toggle_chatbox": {
                    "enabled": true,
                    "position": "bottom-right",
                    "toggle_key": "C",
                    "default_state": "minimized",
                    "ai_connection": "vectorlab_nexus",
                    "description": "Persistent AI chatbot connection with nexus bridge"
                },
                "demo_controls": {
                    "glyph_input": true,
                    "morpheme_visualization": true,
                    "real_time_processing": true,
                    "step_through_mode": true
                }
            },
            "demo_content": {
                "glyph_examples": [
                    {
                        "symbol": "⊕",
                        "morpheme": "xor",
                        "context": "exclusive or operation"
                    },
                    {
                        "symbol": "∇",
                        "morpheme": "nabla",
                        "context": "gradient operator"
                    },
                    {
                        "symbol": "∫",
                        "morpheme": "integral",
                        "context": "integration symbol"
                    },
                    {
                        "symbol": "∑",
                        "morpheme": "summation",
                        "context": "series summation"
                    },
                    {
                        "symbol": "π",
                        "morpheme": "pi",
                        "context": "mathematical constant"
                    }
                ],
                "interactive_features": [
                    "Click glyphs to see morpheme breakdown",
                    "Toggle between Unicode and ASCII representations",
                    "Real-time Math Pro processing",
                    "AI chatbot assistance for explanations"
                ]
            }
        },
        "phonics_trainer": {
            "name": "Interactive Phonics Training Demo",
