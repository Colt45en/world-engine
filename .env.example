# Copy this to .env and customize for your environment
# DO NOT commit .env file to version control!

# Database Configuration
POSTGRES_PASSWORD=your_super_secure_password_here_change_me
DATABASE_URL=postgresql://nexus:${POSTGRES_PASSWORD}@postgres:5432/nexus

# Redis Configuration
REDIS_URL=redis://redis:6379

# Grafana Configuration
GRAFANA_PASSWORD=your_grafana_admin_password

# Application Configuration
NEXUS_ENV=production
MAX_MEMORY_MB=1024
MAX_TRAINING_POINTS=5000

# Domain Configuration (for production)
DOMAIN=your-domain.com
MONITORING_DOMAIN=monitoring.your-domain.com

# SSL Email for Let's Encrypt
ACME_EMAIL=your-email@example.com

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_key_minimum_32_characters

# API Keys (if using external services)
OPENAI_API_KEY=your_openai_key_if_needed
ANTHROPIC_API_KEY=your_anthropic_key_if_needed
